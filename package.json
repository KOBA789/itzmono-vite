{
  "name": "itzmono-vite",
  "version": "0.0.0",
  "scripts": {
    "dev:vite": "vite --host",
    "dev": "run-p dev:vite",
    "build:vite": "vite build",
    "build": "run-s build:vite",
    "typecheck": "tsc",
    "lint:prettier": "prettier . --check",
    "lint:eslint": "eslint . --format stylish",
    "lint": "run-p lint:*",
    "fix:prettier": "pnpm run lint:prettier --write",
    "fix:eslint": "pnpm run lint:eslint --fix",
    "fix": "run-s fix:eslint fix:prettier",
    "test:visual:run": "node scripts/run-visual-test.mjs",
    "test:visual:update:run": "playwright test --update-snapshots",
    "test:visual": "run-s test:visual:run",
    "test:visual:update": "run-s test:visual:update:run"
  },
  "dependencies": {
    "@blueprintjs/core": "6.8.0",
    "@blueprintjs/icons": "6.5.2",
    "react": "19.2.4",
    "react-dom": "19.2.4",
    "tailwindcss": "4.1.18"
  },
  "devDependencies": {
    "@tailwindcss/vite": "^4.0.3",
    "@types/react": "19.2.9",
    "@types/react-dom": "19.2.3",
    "@vitejs/plugin-react": "5.1.4",
    "autoprefixer": "10.4.24",
    "eslint": "9.39.2",
    "eslint-config-prettier": "10.1.8",
    "eslint-config-react": "1.1.7",
    "eslint-plugin-react": "7.37.5",
    "eslint-plugin-react-hooks": "5.2.0",
    "jiti": "^2.4.2",
    "npm-run-all2": "8.0.4",
    "postcss": "8.5.6",
    "prettier": "3.8.1",
    "@playwright/test": "1.58.2",
    "typescript": "5.9.3",
    "typescript-eslint": "^8.22.0",
    "vite": "7.3.1"
  },
  "engines": {
    "node": "^24.0.0"
  },
  "packageManager": "pnpm@10.29.3"
}
