{
  "extends": [
    "config:recommended"
  ],
  "packageRules": [
    {
      "matchUpdateTypes": [
        "minor",
        "patch"
      ],
      "automerge": true
    },
    {
      "matchPackageNames": [
        "@types/react",
        "@types/react-dom"
      ],
      "groupName": "react types"
    },
    {
      "groupName": "blueprintjs",
      "matchPackageNames": [
        "/^@blueprintjs//"
      ]
    }
  ],
  "postUpdateOptions": [
    "pnpmDedupe"
  ]
}
